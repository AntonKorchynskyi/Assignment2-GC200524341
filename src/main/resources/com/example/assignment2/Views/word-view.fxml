<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="700.0" prefWidth="900.0" stylesheets="@../Stylesheet/styles.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.assignment2.Controllers.WordController">
   <children>
      <VBox alignment="CENTER" layoutX="14.0" prefHeight="600.0" prefWidth="768.0" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="18.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label fx:id="mainLabel" text="Choose Your Word!">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <HBox alignment="CENTER" prefHeight="120.0" prefWidth="700.0" spacing="40.0">
               <children>
                  <TextField fx:id="textField" prefHeight="70.0" prefWidth="249.0" />
                  <Button fx:id="searchBtn" mnemonicParsing="false" onAction="#search_onClick" prefHeight="26.0" prefWidth="82.0" text="Search" />
               </children>
            </HBox>
            <Label fx:id="definitionsLabel" text="Definition - Part of Speech">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <ListView fx:id="listView" prefHeight="319.0" prefWidth="762.0" />
            <Button fx:id="randomBtn" mnemonicParsing="false" onAction="#random_onClick" prefHeight="40.0" prefWidth="136.0" text="Random Word" />
         </children>
      </VBox>
   </children>
</AnchorPane>
